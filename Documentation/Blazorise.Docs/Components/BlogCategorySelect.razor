<Badge Style="cursor: pointer;" Color="@(SelectedCategory == "All" ? Color.Primary : Color.Light)" Padding="Padding.Is2" @onclick="@(()=>OnCategoryClicked("All"))">All</Badge>

@foreach ( var category in Categories )
{
    <Badge Style="cursor: pointer;" Color="@(SelectedCategory == category ? Color.Primary : Color.Light)" Margin="Margin.Is2.FromStart" Padding="Padding.Is2" @onclick="@(()=>OnCategoryClicked(category))">@category</Badge>
}
@code {
    private Task OnCategoryClicked( string category )
    {
        SelectedCategory = category;

        return SelectedCategoryChanged.InvokeAsync( SelectedCategory );
    }

    [Parameter] public string SelectedCategory { get; set; }

    [Parameter] public EventCallback<string> SelectedCategoryChanged { get; set; }

    [Parameter] public IEnumerable<string> Categories { get; set; }
}

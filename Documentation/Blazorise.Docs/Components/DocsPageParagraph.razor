@if ( Title != null )
{
    <Heading Class="b-docs-page-attributes-title" Size="HeadingSize.Is3">
        @Title
    </Heading>
}

<Paragraph Class="b-docs-page-paragraph">
    @ChildContent
</Paragraph>
@code {
    [Parameter] public string Title { get; set; }

    [Parameter] public RenderFragment ChildContent { get; set; }
}

<Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnTablet.Is4.OnDesktop">
    <Card Margin="Margin.Is4.FromBottom" Shadow="Shadow.Default">
        <CardImage Source="@ImageSource"></CardImage>
        <CardBody>
            <CardTitle>
                @if (To != null)
                {
                    <Blazorise.Link To="@To" TextColor="TextColor.Primary">
                        @ToText
                    </Blazorise.Link>
                }
            </CardTitle>
            <CardText>
                <article>
                    <Paragraph Margin="Margin.Is0.FromTop">
                        <Small>
                            @ChildContent
                        </Small>
                    </Paragraph>
                </article>
            </CardText>
        </CardBody>
    </Card>
</Column>
@code {
    [Parameter] public string To { get; set; }

    [Parameter] public string ToText { get; set; }

    [Parameter] public string ImageSource { get; set; }

    [Parameter] public RenderFragment ChildContent { get; set; }
}

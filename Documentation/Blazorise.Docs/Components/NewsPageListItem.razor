<UnorderedListItem Margin="Margin.Is2.FromBottom">
    @if ( To != null )
    {
        <Blazorise.Link To="@To" TextColor="TextColor.Primary">@ToText</Blazorise.Link>
    }
    @ChildContent
</UnorderedListItem>
@code {
    [Parameter] public string To { get; set; }

    [Parameter] public string ToText { get; set; }

    [Parameter] public RenderFragment ChildContent { get; set; }
}

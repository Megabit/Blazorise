@page "/help-us-improve"

<Seo Canonical="/help-us-improve" Title="Help us improve Blazorise" Description="Have an idea or suggestion? Contact us and help us to improve Blazorise documentation, pages, and code, by voicing your thoughts!" />

<PageHeader>
    <Title>
        Help us Improve
    </Title>
    <Description>
        <Paragraph>
            Have a suggestion?
        </Paragraph>
        <Paragraph>
            We’d love to listen your thoughts.
        </Paragraph>
    </Description>
</PageHeader>

<Container>
    <Row>
        <Column ColumnSize="ColumnSize.Is8.OnWidescreen.Is12.OnDesktop" Margin="Margin.IsAuto.OnX">
            <Card Shadow="Shadow.Large">
                <Form>
                    <CardBody>
                        <Validations @ref="validationsRef" Mode="ValidationMode.Manual">
                            <Fields>
                                <Field ColumnSize="ColumnSize.IsHalf.OnDesktop">
                                    <FieldLabel>First name</FieldLabel>
                                    <FieldBody>
                                        <Addons>
                                            <Addon AddonType="AddonType.Start">
                                                <AddonLabel>
                                                    <Icon Name="IconName.User" />
                                                </AddonLabel>
                                            </Addon>
                                            <Addon AddonType="AddonType.Body">
                                                <TextEdit @bind-Text="@User.FirstName" name="firstName" Placeholder="First Name..." aria-label="First Name..." />
                                            </Addon>
                                        </Addons>
                                    </FieldBody>
                                </Field>
                                <Field ColumnSize="ColumnSize.IsHalf.OnDesktop">
                                    <FieldLabel>Last name</FieldLabel>
                                    <FieldBody>
                                        <Addons>
                                            <Addon AddonType="AddonType.Start">
                                                <AddonLabel>
                                                    <Icon Name="IconName.Book" />
                                                </AddonLabel>
                                            </Addon>
                                            <Addon AddonType="AddonType.Body">
                                                <TextEdit @bind-Text="@User.LastName" name="lastName" Placeholder="Last Name..." aria-label="Last Name..." />
                                            </Addon>
                                        </Addons>
                                    </FieldBody>
                                </Field>
                            </Fields>
                            <Field>
                                <FieldLabel>Email address</FieldLabel>
                                <FieldBody>
                                    <Addons>
                                        <Addon AddonType="AddonType.Start">
                                            <AddonLabel>
                                                <Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Envelope" />
                                            </AddonLabel>
                                        </Addon>
                                        <TextEdit @bind-Text="@User.Email" name="email" Role="TextRole.Email" Placeholder="Email Here..." aria-label="Email Here..." />
                                    </Addons>
                                </FieldBody>
                            </Field>
                            <Validation Validator="ValidationRule.IsNotEmpty">
                                <Field>
                                    <FieldLabel RequiredIndicator>What would you like to let us know?</FieldLabel>
                                    <FieldBody>
                                        <MemoEdit @bind-Text="@MessageBody" name="message" Rows="6" />
                                    </FieldBody>
                                </Field>
                            </Validation>
                            <Row>
                                <Column Padding="Padding.Is3.FromBottom">
                                    <Help>
                                        You may remain anonymous when providing us with your suggestions. Providing your contact information is optional.
                                    </Help>
                                </Column>
                            </Row>
                            <Row>
                                <Validation Validator="@ValidateRobot">
                                    <Column ColumnSize="ColumnSize.IsHalf.OnDesktop">
                                        <Check TValue="bool" @bind-Checked="@NotARobot">
                                            <ChildContent>
                                                I'm not a robot
                                            </ChildContent>
                                            <Feedback>
                                                <ValidationError />
                                            </Feedback>
                                        </Check>
                                    </Column>
                                </Validation>
                                <Column ColumnSize="ColumnSize.IsHalf.OnDesktop">
                                    <Button Clicked="@SendEmail" Color="Color.Primary" Float="Float.End">Send Message</Button>
                                </Column>
                            </Row>
                        </Validations>
                    </CardBody>
                </Form>
            </Card>
        </Column>
    </Row>
</Container>
@page "/"
@attribute [RenderModeServer(false)]

<Seo Canonical="/" Title="Blazorise - Blazor Component Library" Description="Blazorise is a component library built on top of Blazor with support for CSS frameworks like Bootstrap, Tailwind, Bulma, AntDesign and Material." />

<PageHeader>
    <Title>
        Modern <Span Class="gradient-commercial">UI Component</Span> library for Blazor
    </Title>
    <Subtitle>
        A set of <Strong>80+</Strong> free and open source native Blazor UI controls.
    </Subtitle>
    <Description>
        Blazorise is a <Strong>Blazor component library</Strong> with support for <Strong>multiple CSS frameworks</Strong> like Bootstrap, Tailwind, Bulma, AntDesign and Material.
    </Description>
    <Actions>
        <Button Class="btn-primary-gradient" Type="ButtonType.Link" To="docs" Color="Color.Primary" Size="Size.Large">
            Get Started
            <Icon Name="IconName.ArrowRight" Margin="Margin.Is2.FromStart" />
        </Button>
        <Button Type="ButtonType.Link" To="book-a-demo" Color="Color.Secondary" Size="Size.Large">
            <Icon Name="IconName.Microphone" />
            Book a Demo
        </Button>
    </Actions>
</PageHeader>

<Div Padding="Padding.Is5.OnY">
    <Container>
        <section class="home-logos" id="logos-section">
            <HomeClientLogos />
            <Row>
                <Column>
                    <Paragraph Margin="Margin.Is4.FromTop" TextColor="TextColor.Muted" TextAlignment="TextAlignment.Center">
                        The world's best product teams trust Blazorise to deliver an unrivaled experience for both developers and users.
                    </Paragraph>
                </Column>
            </Row>
        </section>
        <Divider Margin="Margin.Is5.OnY" />
        <HomeCSSFrameworksSection />
        <Divider Margin="Margin.Is5.OnY" />
        <HomeCaseStudiesSection />
        <Divider Margin="Margin.Is5.OnY" />
        <HomePopularComponentsSection />
        <Divider Margin="Margin.Is5.OnY" />
        <HomeTestimonialsSection />
        <Divider Margin="Margin.Is5.OnY" />
        <HomeSpecialistsSection />
        <Divider Margin="Margin.Is5.OnY" />
        <HomeCommunitySection />
        <Divider Margin="Margin.Is5.OnY" />
        <section class="home-newsletter" id="newsletter-section">
            <Container>
                <HomeNewsletterWidget />
            </Container>
        </section>
    </Container>
</Div>
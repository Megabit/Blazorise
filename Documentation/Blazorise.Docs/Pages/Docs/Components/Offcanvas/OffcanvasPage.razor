<DocsAttributes Title="Offcanvas">
    <DocsAttributesItem Name="Visible" Type="bool" Default="false">
        Determines whether the Offcanvas is visible or hidden.
    </DocsAttributesItem>
    <DocsAttributesItem Name="VisibleChanged" Type="EventCallback<bool>">
        Occurs when the Visible property value changes.
    </DocsAttributesItem>
    <DocsAttributesItem Name="Animated" Type="bool" Default="true">
        Determines whether the Offcanvas has animation.
    </DocsAttributesItem>
    <DocsAttributesItem Name="AnimationDuration" Type="int" Default="300">
        The duration of the Offcanvas animation in milliseconds.
    </DocsAttributesItem>
    <DocsAttributesItem Name="ShowBackdrop" Type="bool" Default="true">
        Determines whether to show the backdrop behind the Offcanvas.
    </DocsAttributesItem>
    <DocsAttributesItem Name="Placement" Type="Placement" Default="Placement.Start">
        The placement of the Offcanvas (Start, End, Top, Bottom).

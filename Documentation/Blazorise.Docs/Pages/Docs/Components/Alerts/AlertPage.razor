<DocsMethods>
    <DocsMethodsItem Name="Show()" ReturnType="Task">
        Makes the alert visible.
    </DocsMethodsItem>
    <DocsMethodsItem Name="Hide()" ReturnType="Task">
        Hides the alert.
    </DocsMethodsItem>
    <DocsMethodsItem Name="Toggle()" ReturnType="Task">

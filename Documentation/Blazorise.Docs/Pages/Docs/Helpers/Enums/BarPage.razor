@page "/docs/helpers/enums/bar"

<Seo Canonical="/docs/helpers/enums/bar" Title="Enums: Bar" Description="Learn about the Blazorise Bar enums." />

<DocsPageTitle>
    Enums: Bar
</DocsPageTitle>

<DocsPageSection>
    <DocsPageSectionHeader Title="BarMode">
        <Paragraph>Defines the style of <Code>Bar</Code> component</Paragraph>
        <UnorderedList>
            <UnorderedListItem><Code>Horizontal</Code> - top bar</UnorderedListItem>
            <UnorderedListItem><Code>VerticalPopout</Code> - sidebar with popout <Code>BarDropdown</Code> menus</UnorderedListItem>
            <UnorderedListItem><Code>VerticalInline</Code> - sidebar with inline <Code>BarDropdown</Code> menus</UnorderedListItem>
            <UnorderedListItem><Code>VerticalSmall</Code> - sidebar with icons only, and popout <Code>BarDropdown</Code> menus</UnorderedListItem>
        </UnorderedList>
    </DocsPageSectionHeader>
</DocsPageSection>

<DocsPageSection>
    <DocsPageSectionHeader Title="BarCollapseMode">
        <Paragraph>Defines the <Code>Bar</Code> state when collapsed (only works with <Code>Vertical</Code> bar modes)</Paragraph>
        <UnorderedList>
            <UnorderedListItem><Code>Hide</Code> - collapses to be completely hidden</UnorderedListItem>
            <UnorderedListItem><Code>Small</Code> - collapse to behave like <Code>BarMode.VerticalSmall</Code></UnorderedListItem>
        </UnorderedList>
    </DocsPageSectionHeader>
</DocsPageSection>

<DocsPageSection>
    <DocsPageSectionHeader Title="BarTogglerMode">
        <Paragraph>Defines the look and position of the bar toggler.</Paragraph>
        <UnorderedList>
            <UnorderedListItem><Code>Normal</Code> - The standard inline bar toggler. Supported by Horizontal and Vertical BarModes.</UnorderedListItem>
            <UnorderedListItem><Code>Popout</Code> - A popout style bar toggler. Supported only on Vertical BarModes.</UnorderedListItem>
        </UnorderedList>
    </DocsPageSectionHeader>
</DocsPageSection>
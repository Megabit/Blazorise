<Heading Size="HeadingSize.Is3">
    Attributes
</Heading>

<DocsAttributes>
    <DocsAttributesItem Name="BackgroundColor" Type="string" Default="white">
        Defines the color of the signature pad's background.
    </DocsAttributesItem>
    <DocsAttributesItem Name="PenColor" Type="string" Default="#000000">
        Defines the color of the pen used to draw the signature.
    </DocsAttributesItem>
    <DocsAttributesItem Name="Value" Type="object" Default="null">
        Binds the value of the signature pad to a specified variable.
    </DocsAttributesItem>
    <DocsAttributesItem Name="DotSize" Type="int" Default="2">
        Defines the size of the dots used in drawing the signature.
    </DocsAttributesItem>
    <DocsAttributesItem Name="MaxWidth" Type="int" Default="4">
        Defines the maximum width of the signature stroke.
    </DocsAttributesItem>
    <DocsAttributesItem Name="MinWidth" Type="int" Default="1">
        Defines the minimum width of the signature stroke.
    </DocsAttributesItem>
    <DocsAttributesItem Name="MinDistance" Type="int" Default="5">
        Defines the minimum distance between two points.
    </DocsAttributesItem>
    <DocsAttributesItem Name="Throttle" Type="int" Default="16">
        Defines the delay time in milliseconds between each point of signature pad.
    </DocsAttributesItem>
    <DocsAttributesItem Name="VelocityFilterWeight" Type="float" Default="0.7">
        Defines the smoothness of the signature pad by adjusting the line thickness.
    </DocsAttributesItem>
</DocsAttributes>
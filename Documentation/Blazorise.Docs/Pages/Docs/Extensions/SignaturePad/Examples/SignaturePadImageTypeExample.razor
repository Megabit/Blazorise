@namespace Blazorise.Docs.Docs.Examples

<Row>
    <Column>
        <Card>
            <CardHeader>
                <CardTitle>Signature pad</CardTitle>
            </CardHeader>
            <CardBody>
                <SignaturePad @bind-Value="@data" ImageType="SignaturePadImageType.Png" ImageQuality="0.5" />
            </CardBody>
        </Card>
    </Column>

    <Column>
        <Card>
            <CardHeader>
                <CardTitle>PNG Image</CardTitle>
            </CardHeader>
            <CardBody>
                <Image Source="@Image64" Fluid />
             </CardBody>
         </Card>
     </Column>
 </Row>

 @code {
    byte[] data = null;

    string Image64 => data != null
        ? $"data:image/png;base64,{Convert.ToBase64String( data )}"
        : null;
}
<LoadingIndicator @ref="loadingIndicator">
    <Button Disabled="loadingIndicator.Busy" Clicked="DoWork"/>
</LoadingIndicator>

@code
{
    LoadingIndicator loadingIndicator;

    async Task DoWork()
    {
        if (!loadingIndicator.Busy)
        {
            loadingIndicator.Show();
            // do work...
            loadingIndicator.Hide();
        }
    }
}
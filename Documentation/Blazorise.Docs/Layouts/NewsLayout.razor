@inherits LayoutComponentBase

<Layout Class="b-news">
    <LayoutHeader>
        <Bar Class="b-top-bar" @bind-Visible="@topBarVisible" Breakpoint="Breakpoint.Desktop" Background="Background.Light" ThemeContrast="ThemeContrast.Light">
            <Container>
                <BarBrand>
                    <BarItem>
                        <BarLink Class="top-bar-brand-link" To="">
                            <BarIcon IconName="customIcon" Display="Display.InlineBlock" />
                            Blazorise
                        </BarLink>
                    </BarItem>
                </BarBrand>
                <BarToggler />
                <BarMenu>
                    <BarStart>
                    </BarStart>
                    <BarEnd>
                        <TopMenuEnd />
                    </BarEnd>
                </BarMenu>
            </Container>
        </Bar>
    </LayoutHeader>
    <LayoutContent Class="b-news-content">
        <Container>
            @Body
        </Container>
    </LayoutContent>
    <LayoutFooter Padding="Padding.Is4.FromTop.Is5.FromTop.OnDesktop" Margin="Margin.Is5.OnY.OnDesktop" Border="Border.OnTop">
        <Footer />
    </LayoutFooter>
</Layout>
@code {
    RenderFragment customIcon =@<Image Source="/img/logos/blazorise-small.png" Style="width:32px; height: 32px" />;
}
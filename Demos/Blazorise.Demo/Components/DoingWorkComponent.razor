@using Blazorise;
@if(_isLoading)
{
    <Paragraph>Doing some work, please wait...</Paragraph>
}
else
{
    <Paragraph>Loaded!</Paragraph>
}

@code{
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(3000);
        _isLoading = false;
        await base.OnInitializedAsync();
    }
}

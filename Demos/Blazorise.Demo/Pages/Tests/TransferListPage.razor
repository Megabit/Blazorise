@page "/tests/transferlist"

<Row>
    <Column ColumnSize="ColumnSize.IsFull.OnMobile.IsHalf.OnTablet">
        <Card Margin="Margin.Is4.OnY">
            <CardHeader>
                <CardTitle>Transfer List</CardTitle>
            </CardHeader>
            <CardBody>
                <Check @bind-Checked="Scrollable">Check for Scrollable</Check>
                <TransferList TItem="string"
                              Items="@list"
                              SelectedItemsChanged="HandleList1ItemsChanged"
                              SelectionMode="ListGroupSelectionMode.Multiple"
                              Mode="ListGroupMode.Selectable"
                              Scrollable=@Scrollable
                              ValueField="item => item"
                              TextField="item => item">
                </TransferList>
            </CardBody>
        </Card>
    </Column>
</Row>

@code {
    private List<string> list = new List<string> { "Apple", "Banana", "Cherry", "Grapes", "Orange", "Pear", "Strawberry" };

    private Task HandleList1ItemsChanged(List<string> updatedList)
    {
        list = updatedList;

        return Task.CompletedTask;
    }

    private bool Scrollable = false;
}
@page "/"
@inject IVersionProvider VersionProvider
<DataGrid TItem="Employee" Data="@employees" Editable ShowPager Filterable>
    <DataGridColumns>
        <DataGridCommandColumn TItem="Employee"></DataGridCommandColumn>
        <DataGridColumn Editable Field="@nameof(Employee.FirstName)"></DataGridColumn>
        <DataGridSelectColumn 
            Field="@nameof(Employee.Gender)"
                              Data="genders"
                              ValueField="(x) => ((Gender)x).Code"
                              TextField="(x) => ((Gender)x).Description"
                              Editable>
        </DataGridSelectColumn>
    </DataGridColumns>
</DataGrid>

@code {
    [Inject] EmployeeData employeeData { get; set; }

    private List<Gender> genders = new List<Gender>()
    {
        new()
        {
            Code = null,
            Description = string.Empty
        },
        new()
        {
            Code = "M",
            Description = "Male"
        },
        new()
        {
            Code = "F",
            Description = "Female"
        },
        new()
        {
            Code = "D",
            Description = "Diverse"
        }
    };

    private List<Employee> employees;

    protected override async Task OnInitializedAsync()
    {
        employees = (await employeeData.GetDataAsync()).Take(7).ToList();
        await base.OnInitializedAsync();
    }

    private class Gender
    {
        public string Code { get; set; }
        public string Description { get; set; }
    }

}
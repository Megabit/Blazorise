@inherits Blazorise.BaseBadge
@if ( !HasCustomRegistration )
{
    @if ( Link != null )
    {
        <a href="@Link" class="@ClassNames" @attributes="@Attributes">
            @ChildContent
        </a>
    }
    else
    {
        <span class="@ClassNames" @attributes="@Attributes">
            @ChildContent
        </span>
    }
}
else
{
    @RenderCustomComponent()
}

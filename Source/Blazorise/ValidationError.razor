@inherits Blazorise.Base.BaseValidationError
@if ( !HasCustomRegistration )
{
    @if ( ParentValidation?.Status == ValidationStatus.Error )
    {
        <div class="@ClassMapper.Class">
            @if ( ErrorText != null )
            {
                @ErrorText
            }
            else
            {
                @ChildContent
            }
        </div>
    }
}
else
{
    @RenderCustomComponent()
}
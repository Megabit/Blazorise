@typeparam TValue
@inherits BaseInputComponent<TValue>
@if ( !HasCustomRegistration )
{
    <CascadingValue Value=this>
        <div class="@ClassNames" style="@StyleNames" @onfocus="@OnFocus" @onfocusin="@FocusIn" @onfocusout="@FocusOut" @attributes="@Attributes">
            @ChildContent
        </div>
    </CascadingValue>
}
else
{
    @RenderCustomComponent()
}
@namespace Blazorise
@using System.Text.RegularExpressions
@inherits BaseComponent
@foreach (var fragment in fragments)
{
    if (!string.IsNullOrWhiteSpace(fragment) && allHighlightedTexts.Any(ht =>
        !string.IsNullOrWhiteSpace(ht) &&
        Regex.IsMatch(fragment, Regex.Escape(ht), CaseSensitive ? RegexOptions.None : RegexOptions.IgnoreCase)))
    {
        <mark @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="@StyleNames" @attributes="@Attributes">
            @fragment
        </mark>
    }
    else
    {
        @fragment
    }
}

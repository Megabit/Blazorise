@namespace Blazorise
@inherits BaseComponent
<i @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="@StyleNames" @onclick="@OnClickHandler" @onmouseover="@OnMouseOverHandler" @onmouseout="@OnMouseOutHandler" @attributes="@Attributes">
    @if ( IconProvider.IconNameAsContent && Name is not null )
    {
        if ( Name is IconName )
        {
            @IconProvider.GetIconName( (IconName)Name, GetIconStyle() );
        }
        else if ( Name is string )
        {
            @IconProvider.GetIconName( (string)Name );
        }
    }
</i>
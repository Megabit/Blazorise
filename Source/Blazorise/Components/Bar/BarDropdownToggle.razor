@namespace Blazorise
@inherits BaseComponent

<a @ref="@ElementRef" id="@ElementId" href="@To" class="@ClassNames" style="@StyleNames" role="button" tabindex="0" @onclick="@ClickHandler" @onkeydown="@KeyDownHandler" @attributes="@Attributes" @onmouseenter="@ParentBarDropdown.OnMouseEnterHandler" @onmouseleave="@ParentBarDropdown.OnMouseLeaveHandler">
    @ChildContent
    @if ( IsToggleIconVisible && ParentBarDropdownState?.Mode != BarMode.Horizontal )
    {
        <Icon Name="@(ParentBarDropdown.IsVisible ? IconName.ChevronUp : IconName.ChevronDown)" Float="Float.End" IconSize="IconSize.ExtraSmall"
              Clicked="@(async () => await ParentBarDropdown.Toggle(ElementId))" @onclick:stopPropagation/>
    }
</a>
@namespace Blazorise
@inherits BaseComponent
<Modal @ref="@ModalRef" Closing="@OnModalClosing">
    <ModalContent Centered="@CenterMessage" Scrollable="@ScrollableMessage">
        <ModalHeader>
            <ModalTitle>
                @Title
            </ModalTitle>
            @if ( ShowCloseButton )
            {
                <CloseButton Clicked="@OnCancelClicked" />
            }
        </ModalHeader>
        <ModalBody>
            @if ( ShowMessageIcon )
            {
                <Heading Size="HeadingSize.Is1" TextAlignment="TextAlignment.Center">
                    <Icon Name="@MessageIcon" TextColor="@MessageIconColor" />
                </Heading>
            }
            <Text TextAlignment="TextAlignment.Center">
                @Message
            </Text>
        </ModalBody>
        <ModalFooter>
            @if ( IsConfirmation )
            {
                <Button Color="@CancelButtonColor" Class="@CancelButtonClass" Padding="Blazorise.Padding.Is2.OnX" Clicked="@OnCancelClicked">
                    @if ( Options?.CancelButtonIcon != null )
                    {
                        <Icon Name="@Options.CancelButtonIcon" TextColor="@(Options.CancelButtonIconColor ?? TextColor.Default)" Margin="Blazorise.Margin.Is2.FromEnd" />
                    }
                    @CancelButtonText
                </Button>
                <Button Color="@ConfirmButtonColor" Class="@ConfirmButtonClass" Padding="Blazorise.Padding.Is2.OnX" Clicked="@OnConfirmClicked">
                    @if ( Options?.ConfirmButtonIcon != null )
                    {
                        <Icon Name="@Options.ConfirmButtonIcon" TextColor="@(Options.ConfirmButtonIconColor ?? TextColor.Default)" Margin="Blazorise.Margin.Is2.FromEnd" />
                    }
                    @ConfirmButtonText
                </Button>
            }
            else
            {
                <Button Color="@OkButtonColor" Class="@OkButtonClass" Padding="Blazorise.Padding.Is2.OnX" Clicked="@OnOkClicked">
                    @if ( Options?.OkButtonIcon != null )
                    {
                        <Icon Name="@Options.OkButtonIcon" TextColor="@(Options.OkButtonIconColor ?? TextColor.Default)" Margin="Blazorise.Margin.Is2.FromEnd" />
                    }
                    @OkButtonText
                </Button>
            }
        </ModalFooter>
    </ModalContent>
</Modal>
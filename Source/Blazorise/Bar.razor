@inherits BaseComponent
@if ( !HasCustomRegistration )
{
    <CascadingValue Value=this>
        <CascadingValue Value="@Mode" Name="Mode">
            <nav class="@ClassNames" style="@StyleNames" data-collapse="@CollapseModeString" @attributes="@Attributes">
                @ChildContent
            </nav>
        </CascadingValue>
    </CascadingValue>
}
else
{
    @RenderCustomComponent()
}
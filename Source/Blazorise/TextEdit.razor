@* This has to be name TextEdit because Razor(not Blazor) still doesn't support case sensitive components. *@
@inherits BaseTextInput<string>
@if ( !HasCustomRegistration )
{
    <input @ref="ElementRef" id="@ElementId" type="@Type" inputmode="@Mode" class="@ClassNames" style="@StyleNames" placeholder="@Placeholder" disabled="@Disabled" readonly="@ReadOnly" maxlength="@MaxLength" size="@VisibleCharacters" pattern="@Pattern" value="@CurrentValue" @onchange="@OnChangeHandler" @oninput="@OnInputHandler" @onkeydown="@KeyDown" @onkeypress="@KeyPress" @onkeyup="KeyUp" @attributes="@Attributes" />
    @ChildContent
    @Feedback
}
else
{
    @RenderCustomComponent()
}
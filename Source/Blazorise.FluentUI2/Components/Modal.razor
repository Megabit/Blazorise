@using System.Text
@inherits Blazorise.Modal
<CascadingValue Value="@this" IsFixed>
    <CascadingValue Value="@State">
        @if ( ShowBackdrop )
        {
            <_ModalBackdrop Animated="@Animated" AnimationDuration="@AnimationDuration" />
        }
        <div @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="@StyleNames" role="dialog" tabindex="-1" aria-modal="@AriaModal" aria-labelledby="@AriaLabelledBy" aria-describedby="@AriaDescribedBy" @attributes="@Attributes">
            @if ( ShouldRenderContent )
            {
                @ChildContent
            }
        </div>
    </CascadingValue>
</CascadingValue>
@inherits Blazorise.Step
<CascadingValue Value="@this" IsFixed>
    <div @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="@StyleNames" @onclick="@ClickHandler" @attributes="@Attributes">
        @if ( Marker != null || Caption != null )
        {
            @if ( Marker != null )
            {
                <div class="@MarkerClassNames" style="@Styles?.Marker">
                    @Marker
                </div>
            }
            @if ( Caption != null )
            {
                <span class="@DescriptionClassNames" style="@Styles?.Description">
                    @Caption
                </span>
            }
        }
        else
        {
            <div class="@MarkerClassNames" style="@Styles?.Marker">
                @CalculatedIndex
            </div>
            <span class="@DescriptionClassNames" style="@Styles?.Description">
                @ChildContent
            </span>
        }
    </div>
</CascadingValue>
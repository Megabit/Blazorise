@inherits Blazorise.BarDropdownToggle
@if ( ParentStore.Mode == BarMode.Horizontal )
{
    @ChildContent
    <i class="fas fa-angle-down"></i>
}
else
{
    <a id="@ElementId" class="@ClassNames" style="@StyleNames" role="button" @onclick="@ClickHandler" @attributes="@Attributes">
        @if (ParentStore.IconName != null)
        {
            <BarIcon IconName="ParentStore.IconName" />
        }
        <span>@ChildContent</span>
    </a>
}
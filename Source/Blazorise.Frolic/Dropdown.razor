@inherits BaseDropdown
<CascadingValue Value=this>
    <div class="@ClassMapper.Class">
        @ChildContent
    </div>
</CascadingValue>
@code{
    protected override void OnInitialized()
    {
        ParentAddon?.Hook( this );

        base.OnInitialized();
    }

    [CascadingParameter] protected Addon ParentAddon { get; set; }
}
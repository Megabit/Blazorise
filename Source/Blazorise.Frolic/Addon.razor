@inherits BaseAddon
<CascadingValue Value="this">
    @if ( AddonType == AddonType.Body || NoContainer )
    {
        @ChildContent
    }
    else
    {
        <div class="@Classnames">
            @ChildContent
        </div>
    }
</CascadingValue>
@code{
    BaseComponent child;

    internal void Hook( BaseComponent child )
    {
        this.child = child;
        StateHasChanged();
    }

    bool NoContainer => child is Frolic.Button || child is Frolic.Dropdown;
}

@inherits Blazorise.BarStart
@if ( ParentStore.Mode == BarMode.Horizontal )
{
    @ChildContent
}
else
{
    <CascadingValue Value="@ParentStore">
        <div id="@ElementId" class="@ClassNames" style="@StyleNames" @attributes="@Attributes">
            @ChildContent
        </div>
    </CascadingValue>
}
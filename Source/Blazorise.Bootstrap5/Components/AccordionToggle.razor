@inherits Blazorise.AccordionToggle
<button @ref="@ElementRef" id="@ElementId" type="button" class="@ClassNames" style="@StyleNames" aria-expanded="@AriaExpandedString" aria-controls="@AriaControls" @onclick="@ClickHandler" @attributes="@Attributes">
    @ChildContent
</button>
@code {
    string AriaExpandedString => ( ParentAccordionItem is not null ? AccordionItemVisible : CollapseVisible ) ? "true" : "false";
}
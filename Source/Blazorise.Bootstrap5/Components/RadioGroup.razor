@typeparam TValue
@inherits Blazorise.RadioGroup<TValue>
<CascadingValue Value="@this" IsFixed>
    @if ( Buttons )
    {
        <div @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="@StyleNames" role="radiogroup" tabindex="@TabIndex" aria-invalid="@AriaInvalidAttribute" aria-describedby="@AriaDescribedByAttribute" @attributes="@Attributes" data-toggle="buttons">
            @ChildContent
        </div>
        @Feedback
    }
    else
    {
        <div @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="@StyleNames" role="radiogroup" tabindex="@TabIndex" aria-invalid="@AriaInvalidAttribute" aria-describedby="@AriaDescribedByAttribute" @attributes="@Attributes">
            @ChildContent
        </div>
        @Feedback
    }
</CascadingValue>
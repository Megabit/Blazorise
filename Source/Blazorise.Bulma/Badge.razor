@inherits Blazorise.Badge
@if ( Link != null )
{
    <a href="@Link" class="@ClassNames" style="@StyleNames" @attributes="@Attributes">
        <span>@ChildContent</span>
        @if ( Closable )
        {
            <span class="@CloseClassBuilder.Class" @onclick="@OnCloseClickedHandler" @onclick:preventDefault="true"></span>
        }
    </a>
}
else
{
    <span class="@ClassNames" style="@StyleNames" @attributes="@Attributes">
        <span>@ChildContent</span>
        @if ( Closable )
        {
            <span class="@CloseClassBuilder.Class" @onclick="@OnCloseClickedHandler"></span>
        }
    </span>
}
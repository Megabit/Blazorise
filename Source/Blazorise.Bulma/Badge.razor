@inherits Blazorise.Badge
@if ( Link != null )
{
    <a id="@ElementId" href="@Link" class="@ClassNames" style="@StyleNames" @attributes="@Attributes">
        <span>@ChildContent</span>
        @if ( Closable )
        {
            <span aria-label="close" class="@CloseClassBuilder.Class" @onclick="@OnCloseClickedHandler" @onclick:preventDefault tabindex="0" @onkeydown="@OnCloseKeyDownHandler"></span>
        }
    </a>
}
else
{
    <span id="@ElementId" class="@ClassNames" style="@StyleNames" @attributes="@Attributes">
        <span>@ChildContent</span>
        @if ( Closable )
        {
            <span aria-label="close" class="@CloseClassBuilder.Class" @onclick="@OnCloseClickedHandler" @onclick:preventDefault tabindex="0" @onkeydown="@OnCloseKeyDownHandler"></span>
        }
    </span>
}
@inherits Blazorise.FieldHelp
@if ( ParentIsFieldBody )
{
    <div class="field">
        <small class="@ClassNames" style="@StyleNames" @attributes="@Attributes">
            @ChildContent
        </small>
    </div>
}
else
{
    <small class="@ClassNames" style="@StyleNames" @attributes="@Attributes">
        @ChildContent
    </small>
}
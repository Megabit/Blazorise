@inherits BaseDateEdit
@if ( ParentIsFieldBody )
{
    <div class="field">
        <div class="control">
            <input @ref="@ElementRef" @ref:suppressField id="@ElementId" type="date" class="@ClassMapper.Class" style="@StyleMapper.Style" disabled="@IsDisabled" readonly="@IsReadonly" pattern="@Pattern" value="@internalDate" @onchange="@InternalDateHandler" @onclick="@ClickHandler" placeholder="@Placeholder" min="@Min?.ToString(Utils.Parsers.InternalDateFormat)" max="@Max?.ToString(Utils.Parsers.InternalDateFormat)" />
            @ChildContent
        </div>
        @Feedback
    </div>
}
else
{
    <div class="control">
        <input @ref="@ElementRef" @ref:suppressField id="@ElementId" type="date" class="@ClassMapper.Class" style="@StyleMapper.Style" disabled="@IsDisabled" readonly="@IsReadonly" pattern="@Pattern" value="@internalDate" @onchange="@InternalDateHandler" @onclick="@ClickHandler" placeholder="@Placeholder" min="@Min?.ToString(Utils.Parsers.InternalDateFormat)" max="@Max?.ToString(Utils.Parsers.InternalDateFormat)" />
        @ChildContent
    </div>
    @Feedback
}
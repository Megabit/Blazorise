@inherits BaseMemo
@if ( ParentIsFieldBody )
{
    <div class="field">
        <div class="control">
            <textarea @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="@StyleNames" placeholder="@Placeholder" disabled="@IsDisabled" readonly="@IsReadonly" value="@Text" maxlength="@MaxLength" rows="@Rows" @onchange="@HandleOnChange" @oninput="@HandleOnInput" />
            @ChildContent
        </div>
        @Feedback
    </div>
}
else
{
    <div class="control">
        <textarea @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="@StyleNames" placeholder="@Placeholder" disabled="@IsDisabled" readonly="@IsReadonly" value="@Text" maxlength="@MaxLength" rows="@Rows" @onchange="@HandleOnChange" @oninput="@HandleOnInput" />
        @ChildContent
    </div>
    @Feedback
}
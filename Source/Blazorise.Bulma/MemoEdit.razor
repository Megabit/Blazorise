@inherits Blazorise.MemoEdit
@if ( ParentIsFieldBody )
{
    <div class="field">
        <div class="control">
            <textarea @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="@StyleNames" placeholder="@Placeholder" disabled="@Disabled" readonly="@ReadOnly" value="@CurrentValue" maxlength="@MaxLength" rows="@Rows" @onchange="@OnChangeHandler" @oninput="@OnInputHandler" @attributes="@Attributes" />
            @ChildContent
        </div>
        @Feedback
    </div>
}
else
{
    <div class="control">
        <textarea @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="@StyleNames" placeholder="@Placeholder" disabled="@Disabled" readonly="@ReadOnly" value="@CurrentValue" maxlength="@MaxLength" rows="@Rows" @onchange="@OnChangeHandler" @oninput="@OnInputHandler" @attributes="@Attributes" />
        @ChildContent
    </div>
    @Feedback
}
<Div Class="b-scheduler-allday-header" style="@GetAllDayHeaderStyle()" Flex="Blazorise.Flex.Column.JustifyContent.Center.AlignItems.Center" Width="Blazorise.Width.Is100" Border="Border.Is1.OnBottom">
    <Div Class="b-scheduler-allday-header-cell">
        <Span TextWeight="TextWeight.SemiBold">All Day</Span>
    </Div>
</Div>
@code {
    string GetAllDayHeaderStyle()
    {
        return $"min-height: {( HeaderCellHeight / 2 ) * MaxStackedAllDayItems}px;";
    }

    [Parameter] public double HeaderCellHeight { get; set; }

    [Parameter] public int MaxStackedAllDayItems { get; set; }
}

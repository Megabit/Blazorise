@typeparam TNode
@inherits BaseComponent
<div class="b-tree-view-node-title">
    @if ( ParentTreeViewState.SelectionMode == TreeViewSelectionMode.Multiple )
    {
        <div class="b-tree-view-node-check">
            <Check TValue="bool" Checked="@Checked" CheckedChanged="@OnCheckedChanged" />
        </div>
    }
    <span class="@ClassNames" style="@(Selected ? selectedNodeStyling.Style : nodeStyling.Style)" @onclick="@OnClick">
        @ChildContent
    </span>
</div>
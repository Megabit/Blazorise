@typeparam TItem
<Dropdown @ref="@dropdown" Class="@Class" Style="@Style" Attributes="@Attributes">
    <DropdownToggle @ref="@dropdownToggle" Color="@Color">@ChildContent</DropdownToggle>
    <DropdownMenu>
        @if ( Data != null )
        {
            foreach ( var item in Data )
            {
                var text = TextField?.Invoke( item );
                var value = ValueField?.Invoke( item );

                <DropdownItem Clicked="@HandleItemClicked" Value="@value">@text</DropdownItem>
            }
        }
    </DropdownMenu>
</Dropdown>


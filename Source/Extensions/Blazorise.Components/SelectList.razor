@typeparam TItem
<Select @ref="@select" TValue="object" SelectedValue="@SelectedValue" SelectedValueChanged="@HandleSelectedValueChanged" Class="@Class" Style="@Style" Attributes="@Attributes">
    @if ( Data != null )
    {
        foreach ( var item in Data )
        {
            var text = TextField?.Invoke( item );
            var value = ValueField?.Invoke( item );

            <SelectItem TValue="object" Value="@value">@text</SelectItem>
        }
    }
    @ChildContent
</Select>
@typeparam TItem
@typeparam TValue
<Select @ref="@selectRef" ElementId="@ElementId" TValue="TValue" SelectedValue="@CurrentSelectedValue" SelectedValueChanged="@HandleSelectedValueChanged" Class="@Class" Style="@Style" Size="@Size" MaxVisibleItems="@MaxVisibleItems" TabIndex="@TabIndex" Disabled="@Disabled" Attributes="@Attributes" SelectedValueExpression="@SelectedValueExpression">
    <ChildContent>
        @if ( DefaultItemText != null )
        {
            <SelectItem @key="@DefaultItemValue" TValue="TValue" Value="@DefaultItemValue" Disabled="@DefaultItemDisabled" Hidden="@DefaultItemHidden">@DefaultItemText</SelectItem>
        }
        @if ( Data != null )
        {
            @foreach ( var item in Data )
            {
                <SelectItem @key="@GetKey(item)" TValue="TValue" Value="@GetValue(item)">@GetText(item)</SelectItem>
            }
        }
        @ChildContent
    </ChildContent>
    <Feedback>
        @Feedback
    </Feedback>
</Select>
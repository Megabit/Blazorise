@typeparam TItem
@inherits BaseSelectList<TItem>
<Select TValue="object" SelectedValue="@SelectedValue" SelectedValueChanged="@HandleSelectedValueChanged">
    @if ( Data != null )
    {
        foreach ( var item in Data )
        {
            var text = TextField?.Invoke( item );
            var value = ValueField?.Invoke( item );

            <SelectItem TValue="object" Value="@value">@text</SelectItem>
        }
    }
    @ChildContent
</Select>
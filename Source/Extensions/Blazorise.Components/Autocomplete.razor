@typeparam TItem
@typeparam TValue
<Dropdown @ref="dropdownRef" ElementId="@ElementId" Class="@DropdownClassNames" Style="@Style" Attributes="@Attributes" Visible="@DropdownVisible">
    <TextEdit @ref="@textEditRef" Role="TextRole.Search" Text="@SelectedText" TextChanged="@HandleTextChanged" Placeholder="@Placeholder" Size="@Size" Disabled="@Disabled" TabIndex="@TabIndex" KeyDown="@HandleTextKeyDown" ChangeTextOnKeyPress="@ChangeTextOnKeyPress" DelayTextOnKeyPress="@DelayTextOnKeyPress" DelayTextOnKeyPressInterval="@DelayTextOnKeyPressInterval" />
    <DropdownMenu>
        @if ( DropdownVisible )
        {
            for ( int i = 0; i < FilteredData.Count; ++i )
            {
                var item = FilteredData[i];

                var text = TextField?.Invoke( item );
                var value = ValueField != null ? ValueField.Invoke( item ) : default;

                <DropdownItem Active="@(i == ActiveItemIndex)" Value="@value" Clicked="@HandleDropdownItemClicked">@text</DropdownItem>
            }
        }
    </DropdownMenu>
</Dropdown>

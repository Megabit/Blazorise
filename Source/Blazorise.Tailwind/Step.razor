@inherits Blazorise.Step
<CascadingValue Value="@this" IsFixed>
    <li id="@ElementId" class="@ClassNames" style="@StyleNames" @onclick="@ClickHandler" @attributes="@Attributes">
        <div class="flex items-center cursor-pointer leading-5 no-underline after:flex-1 after:bg-red after:h-px after:w-full after:ml-4 after:bg-red-700">
            @if ( Marker != null || Caption != null )
            {
                @if ( Marker != null )
                {
                    <span class="@MarkerClassNames">
                        @Marker
                    </span>
                }
                @if ( Caption != null )
                {
                    <span class="@DescriptionClassNames">
                        @Caption
                    </span>
                }
            }
            else
            {
                <span class="@MarkerClassNames">
                    @CalculatedIndex
                </span>
                <span class="@DescriptionClassNames">
                    @ChildContent
                </span>
            }
        </div>
    </li>
</CascadingValue>
@inherits Blazorise.DropdownItem
<li>
    <a @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="@StyleNames" @onmouseup="@ClickHandler" @onmousedown="() => {}" @onmousedown:preventDefault @attributes="@Attributes">
        @if ( ShowCheckbox )
        {
            <Div Display="Blazorise.Display.InlineBlock" @onclick:stopPropagation @onmouseup:stopPropagation>
                <Blazorise.Check TValue="bool" Value="@(@checked)" ValueChanged="CheckedChangedHandler" ValueExpression="@checkedExpression" Disabled="@Disabled" @onclick:stopPropagation>
                    @ChildContent
                </Blazorise.Check>
            </Div>
        }
        else
        {
            @ChildContent
        }
    </a>
</li>
@inherits Blazorise.Modal
<CascadingValue Value="@this" IsFixed>
    <CascadingValue Value="@State">
        <div @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="@StyleNames" role="dialog" aria-hidden="@((!Visible).ToString().ToLowerInvariant())" @attributes="@Attributes">
            @if ( RenderMode == ModalRenderMode.Default || ( RenderMode == ModalRenderMode.LazyReload && IsVisible ) || ( RenderMode == ModalRenderMode.LazyLoad && lazyLoaded ) )
            {
                @ChildContent
            }
        </div>
        @if ( ShowBackdrop && BackdropVisible )
        {
            <_ModalBackdrop />
        }
    </CascadingValue>
</CascadingValue>
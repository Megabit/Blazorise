<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\..\Build\Blazorise.Version.props" />
  <Import Project="..\..\..\Build\Blazorise.Pack.props" />
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
    <LangVersion>12.0</LangVersion>
    <AssemblyName>Blazorise.Analyzers</AssemblyName>
    <RootNamespace>Blazorise.Analyzers</RootNamespace>
    <PackageId>Blazorise.Analyzers</PackageId>
    <Version>$(BlazoriseVersion)</Version>
    <Authors>Blazorise</Authors>
    <Company>Blazorise</Company>
    <PackageProjectUrl>https://blazorise.com/</PackageProjectUrl>
    <Description>Roslyn analyzers and migration helpers for Blazorise 2.0.</Description>
    <PackageTags>Blazorise;Blazor;Analyzer;Roslyn;Migration</PackageTags>
    <RepositoryUrl>https://github.com/Megabit/Blazorise</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <IsRoslynAnalyzer>true</IsRoslynAnalyzer>
    <DevelopmentDependency>true</DevelopmentDependency>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <NoWarn>NU5128;RS2008</NoWarn>
    <Nullable>enable</Nullable>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="AnalyzerReleases.Shipped.txt" />
    <AdditionalFiles Include="AnalyzerReleases.Unshipped.txt" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <!-- Pack the netstandard analyzer assembly under analyzers/dotnet/cs -->
    <None Include="$(TargetDir)$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    <None Include="$(TargetDir)$(AssemblyName).pdb" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

  <ItemGroup>
    <None Include="build\Blazorise.Analyzers.props" Pack="true" PackagePath="build\Blazorise.Analyzers.props" />
  </ItemGroup>
</Project>
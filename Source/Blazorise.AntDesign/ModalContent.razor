@inherits Blazorise.ModalContent
<CascadingValue Value="@this" IsFixed>
    <div @ref="@ElementRef" id="@WrapperElementId" class="ant-modal-wrap" role="dialog" style="@(ParentModal?.IsVisible == true ? "" : "display: none;")">
        <div class="@DialogClassNames" role="document">
            <div @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="@StyleNames" @attributes="@Attributes">
                <FocusTrap @ref="@FocusTrapRef" Active="@IsFocusTrap">
                    @ChildContent
                </FocusTrap>
            </div>
        </div>
    </div>
</CascadingValue>
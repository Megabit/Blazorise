@inherits Blazorise.Step
<CascadingValue Value="@this" IsFixed>
    <div @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="@StyleNames" @onclick="@ClickHandler" @attributes="@Attributes">
        <div class="@ContainerClassNames" style="@Styles?.Container">
            <div class="ant-steps-item-tail"></div>
            @if ( Marker != null || Caption != null )
            {

                @if ( Marker != null )
                {
                    <span class="@MarkerClassNames" style="@Styles?.Marker">
                        <span class="ant-steps-icon">
                            @Marker
                        </span>
                    </span>
                }
                @if ( Caption != null )
                {
                    <div class="@DescriptionClassNames" style="@Styles?.Description">
                        <div class="ant-steps-item-title">
                            @Caption
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="@MarkerClassNames" style="@Styles?.Marker">
                    <span class="ant-steps-icon">
                        @CalculatedIndex
                    </span>
                </div>
                <div class="@DescriptionClassNames" style="@Styles?.Description">
                    <div class="ant-steps-item-title">
                        @ChildContent
                    </div>
                </div>
            }
        </div>
    </div>
</CascadingValue>
@code {
    string ContainerClassNames
    {
        get
        {
            if ( string.IsNullOrEmpty( Classes?.Container ) )
            {
                return "ant-steps-item-container";
            }

            return $"ant-steps-item-container {Classes.Container}";
        }
    }
}
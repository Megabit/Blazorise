@inherits Blazorise.Heading
<Dynamic TagName="@($"h{HeadingSize(Size)}")" class="@ClassNames" style="@StyleNames" @attributes="@Attributes">
    @ChildContent
</Dynamic>
@code{
    string HeadingSize( HeadingSize headingSize )
    {
        switch ( headingSize )
        {
            case Blazorise.HeadingSize.Is1:
                return "1";
            case Blazorise.HeadingSize.Is2:
                return "2";
            case Blazorise.HeadingSize.Is3:
                return "3";
            case Blazorise.HeadingSize.Is4:
                return "4";
            case Blazorise.HeadingSize.Is5:
                return "5";
            case Blazorise.HeadingSize.Is6:
                return "6";
            default:
                return "3";
        }
    }
}
@typeparam TValue
@inherits Blazorise.Slider<TValue>
<div class="ant-slider">
    <div class="ant-slider-rail"></div>
    <div class="ant-slider-track" style="@TrackStyle"></div>
    <div class="ant-slider-step"></div>
    <div tabindex="0" class="ant-slider-handle" role="slider" aria-valuemin="@Min" aria-valuemax="@Max" aria-valuenow="@Value" aria-disabled="@Disabled" style="@HandleStyle"></div>
    <div class="ant-slider-mark"></div>
</div>
@ChildContent
@Feedback
@code{
    string TrackStyle => $"left: 0%; right: auto; width: {Value}%;";

    string HandleStyle => $"left: {Value}%; right: auto; transform: translateX(-50%);";
}
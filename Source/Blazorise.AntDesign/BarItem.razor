@inherits Blazorise.BarItem
<CascadingValue Value=this>
    <CascadingValue Value="@Store">
            @if ( HasDropdown && Store.Mode != BarMode.Horizontal )
            {
                @ChildContent
            }
            else
            {
                <li id="@ElementId" class="@ClassNames" style="@StyleNames" role="menuitem" aria-disabled="@Store.Disabled.ToString().ToLowerInvariant()" @attributes="@Attributes">
                    @ChildContent
                </li>
            }
    </CascadingValue>
</CascadingValue>
@inherits Blazorise.BarItem
<CascadingValue Value=this>
    <CascadingValue Value="@Store">
            @if ( HasDropdown && Store.Mode != BarMode.Horizontal )
            {
                @ChildContent
            }
            else
            {
                <li class="@ClassNames" style="@StyleNames" role="menuitem" aria-disabled="@Store.Disabled.ToString().ToLowerInvariant()" @attributes="@Attributes">
                    @if ( Store.IconName != null )
                    {
                        <span class="anticon">
                            <BarIcon IconName="@Store.IconName" />
                        </span>
                    }
                    <span>@ChildContent</span>
                </li>
            }
    </CascadingValue>
</CascadingValue>
@inherits Blazorise.BarItem
<CascadingValue Value=this>
    <CascadingValue Value="@Mode" Name="Mode">
        <CascadingValue Value="@IconName" Name="IconName">
            @if (HasDropdown && Mode != BarMode.Horizontal)
            {

                @ChildContent
            }
            else
            {
                <li class="@ClassNames" style="@StyleNames" role="menuitem" aria-disabled="@Disabled.ToString().ToLowerInvariant()" @attributes="@Attributes">
                    <span>@ChildContent</span>
                </li>
            }
        </CascadingValue>
    </CascadingValue>
</CascadingValue>
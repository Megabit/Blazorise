@inherits Blazorise.BarDropdownToggle
<div @onclick="@ClickHandler" class="ant-menu-submenu-title" role="button" aria-expanded="@Visible.ToString().ToLowerInvariant()" aria-haspopup="true" style="padding-left: 24px;" aria-owns="@SubMenuId">
    <span>
        @if (IconName != null)
        {
            <span class="anticon">
                <Icon Name="@IconName" />
            </span>
        }
        <span>@ChildContent</span>
    </span>
    <i class="ant-menu-submenu-arrow"></i>
</div>
@code{
    [CascadingParameter( Name = "SubMenuId" )] string SubMenuId { get; set; }
}
@inherits Blazorise.BarDropdownToggle
<div @onclick="@ClickHandler" class="ant-menu-submenu-title" role="button" aria-expanded="@ParentStore.Visible.ToString().ToLowerInvariant()" aria-haspopup="true" style="padding-left: 24px;" aria-owns="@SubMenuId">
    <span>
        @if ( ParentStore.IconName != null )
        {
            <span class="anticon">
                <Icon Name="@ParentStore.IconName" />
            </span>
        }
        <span>@ChildContent</span>
    </span>
    <i class="ant-menu-submenu-arrow"></i>
</div>
@code{
    [CascadingParameter( Name = "SubMenuId" )] string SubMenuId { get; set; }
}
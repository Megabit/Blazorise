@inherits Blazorise.BarDropdownToggle
<div @onclick="@ClickHandler" class="ant-menu-submenu-title" style="@StyleNames" role="button" aria-expanded="@ParentStore.Visible.ToString().ToLowerInvariant()" aria-haspopup="true" aria-owns="@SubMenuId"  @onmouseenter="@ParentBarDropdown.OnMouseEnter" @onmouseleave="@ParentBarDropdown.OnMouseLeave">
    <span>@ChildContent</span>
    <i class="ant-menu-submenu-arrow"></i>
</div>
@code{
    [CascadingParameter( Name = "SubMenuId" )] string SubMenuId { get; set; }
}
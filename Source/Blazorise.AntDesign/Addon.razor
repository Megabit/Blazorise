@inherits Blazorise.Addon
<CascadingValue Value="@this" IsFixed="true">
    @if ( AddonType == AddonType.Body )
    {
        @ChildContent
    }
    else
    {
        <span id="@ElementId" class="@ClassNames" style="@StyleNames" @attributes="@Attributes">
            @ChildContent
        </span>
    }
</CascadingValue>
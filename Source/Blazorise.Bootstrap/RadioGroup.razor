@typeparam TValue
@inherits Blazorise.RadioGroup<TValue>
<CascadingValue Value=this>
    @if ( Buttons )
    {
        <div class="@ClassNames" style="@StyleNames" @attributes="@Attributes" data-toggle="buttons">
            @ChildContent
        </div>
    }
    else
    {
        <div class="@ClassNames" style="@StyleNames" @attributes="@Attributes">
            @ChildContent
        </div>
    }
</CascadingValue>
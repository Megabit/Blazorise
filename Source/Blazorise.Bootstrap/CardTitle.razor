@inherits Blazorise.CardTitle
@if ( Size != null )
{
    <Dynamic TagName="@($"h{Size}")" class="@ClassNames" style="@StyleNames" @attributes="@Attributes">
        @ChildContent
    </Dynamic>
}
else
{
    <Dynamic TagName="@(InsideHeader ? "span" : "div")" class="@ClassNames" style="@StyleNames" @attributes="@Attributes">
        @ChildContent
    </Dynamic>
}
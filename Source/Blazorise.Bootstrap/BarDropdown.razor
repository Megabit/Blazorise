@inherits Blazorise.BarDropdown
<CascadingValue Value="@this" IsFixed="true">
    <CascadingValue Value="@Store">
        @if (Store.Mode == BarMode.Horizontal)
        {
            @ChildContent
        }
        else
        {
            <div id="@ElementId" class="@ClassNames" style="@StyleNames" @attributes="@Attributes" data-visible="@VisibleString">
                @ChildContent
            </div>
        }
    </CascadingValue>
</CascadingValue>
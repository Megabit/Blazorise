@*
    The Router component displays whichever component has a @page
    directive matching the current URI.
*@
<Blazorise.ThemeProvider Theme="@theme">
    <Router AppAssembly="typeof(Program).Assembly" />
</Blazorise.ThemeProvider>
@code{
    private Theme theme = new Theme
    {
        ColorOptions = new ThemeColorOptions
        {
            Primary = "#00d1b2",
            Secondary = "#A65529",
            Success = "#23d160",
            Info = "#209cee",
            Warning = "#ffd83d",
            Danger = "#ff2b56",
            Light = "#F0F0F0",
            Dark = "#535353",
        },
        ButtonOptions = new ThemeButtonOptions { BorderRadius = "0rem" },
        DropdownOptions = new ThemeDropdownOptions { BorderRadius = "0rem" },
        InputOptions = new ThemeInputOptions { BorderRadius = "0rem" },
        CardOptions = new ThemeCardOptions { BorderRadius = "0rem" },
        ModalOptions = new ThemeModalOptions { BorderRadius = "0rem" },
        TabsOptions = new ThemeTabsOptions { BorderRadius = "0rem" },
        ProgressOptions = new ThemeProgressOptions { BorderRadius = "0rem" },
        AlertOptions = new ThemeAlertOptions { BorderRadius = "0rem" },
        BreadcrumbOptions = new ThemeBreadcrumbOptions { BorderRadius = "0rem" },
        BadgeOptions = new ThemeBadgeOptions { BorderRadius = "0rem" },
        PaginationOptions = new ThemePaginationOptions { BorderRadius = "0rem" },
    };
}
